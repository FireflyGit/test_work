%table
  %tr
    %th Каталог
    %th Описание
  - @catalog.each do |catalog|
    %tr
      %td= catalog.name
      %td= catalog.description
      %td= link_to 'Просмотр', catalog_path(catalog)
      %td= link_to 'Изменить', edit_catalog_path(catalog)
      %td= link_to 'Удалить', catalog_path(catalog), method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'Новый каталог', new_catalog_path