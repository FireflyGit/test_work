
%table
  %tr
    %th Name
    %th Description
  - @catalog.each do |catalog|
    %tr
      %td= catalog.name
      %td= catalog.description
      %td= link_to 'Show', catalog_path(catalog)
      %td= link_to 'Edit', edit_catalog_path(catalog)
      %td= link_to 'Destroy', catalog_path(catalog), method: :delete, data: { confirm: 'Are you sure?' }

= link_to 'New Catalog', new_catalog_path